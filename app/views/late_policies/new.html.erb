<h1>New late policy</h1>

<%= form_for @penalty_policy, :url => { :action => "create" } do |f| %>
  <% unless @penalty_policy.errors.full_messages.any? { |message| message.start_with?("Failed to") } %>
    <%= error_messages_for @penalty_policy %>
  <% end %>

  <% unless @penalty_policy.errors.full_messages.any? { |message| message.include?("error with ") } %>
  <%= error_messages_for @penalty_policy %>
<% end %>

  <%= render partial: 'form', locals: { f: f } %>
  <%= f.submit 'Create' %>
<% end %>

